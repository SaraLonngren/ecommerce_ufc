<p id="notice"><%= notice %></p>
<section class="content-header">
  <%= link_to new_admin_product_path, class: 'btn btn-app' do %>
    <i class="fa fa-edit"></i> Novo Produto
  <% end %>
  <ol class="breadcrumb">
    <li><%= link_to admin_root_path do %><i class="fa fa-dashboard"></i> Dashboard<% end %></li>
    <li class="active">Produtos</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h1>Products</h1>
        </div>

      <div class="box-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Category</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td><%= product.price %></td>
                <td><%= product.category %></td>
                <td><%= link_to 'Show', admin_product_path(product) %></td>
                <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
                <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
     </div>
    </div>
  </div>
</section>

<br>

