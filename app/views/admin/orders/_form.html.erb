<%= form_with(model: [:admin, order], local: true) do |form| %>
  <div class="box-body" >
    <% if order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

        <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :user_id %>
      <%= form.select :user_id, options_for_select(User.all.map {|user| [user.email, user.id]}), {include_blank: true}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(Order::STATUS), {include_blank: true}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :total %>
      <%= form.number_field :total, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_address %>
      <%= form.text_field :shipment_address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_city %>
      <%= form.text_field :shipment_city, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_state %>
      <%= form.text_field :shipment_state, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_country %>
      <%= form.text_field :shipment_country, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_zip %>
      <%= form.text_field :shipment_zip, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :shipment_telephone %>
      <%= form.text_field :shipment_telephone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_address %>
      <%= form.text_field :billing_address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_city %>
      <%= form.text_field :billing_city, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_state %>
      <%= form.text_field :billing_state, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_country %>
      <%= form.text_field :billing_country, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_zip %>
      <%= form.text_field :billing_zip, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :billing_telephone %>
      <%= form.text_field :billing_telephone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :note %>
      <%= form.text_field :note, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :products %>
      <%= form.select :products, options_for_select(Product.all.map { |p| [p.name, p.id] }), {include_blank: true}, {class: 'form-control', multiple: true} %>
    </div>


    <div class="box-footer">
      <%= form.submit 'Salvar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
