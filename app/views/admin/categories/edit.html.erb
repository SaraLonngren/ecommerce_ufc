<section class="content-header">
  <h1>
    Categorias
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to admin_categories_path do %><i class="fa fa-dashboard"></i> Categorias<% end %></li>
    <li class="active">Editar</li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h1 class="box-title"><%= @category.name %></h1>
        </div>
        <%= render 'form', category: @category %>
      </div>
    </div>
  </div>
<%= link_to 'Voltar', admin_categories_path %>
</section>

