<div class="section">
      <!-- container -->
  <div class="container">
        <!-- row -->
    <div class="row">  
      <div class="col-md-7">
        <h2>Cadastre-se</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', placeholder: 'Email' %>
          </div>

          <div class="form-group">
            <%= f.text_field :name, class: 'input', placeholder: 'Nome' %>
          </div>


          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: 'input', placeholder: "Senha - #{@minimum_password_length} caracteres no mÃ­nimo"  %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input', placeholder: "Confirme a senha" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
