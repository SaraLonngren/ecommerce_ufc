<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p>Bem vindo <%=current_employee.name%></p>
        <!-- Status -->
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">MENU</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="<%= 'active' if @controller == 'admin/categories'%>"><%= link_to admin_categories_path do %><i class='fa fa-link'></i> <span>Categorias</span><% end %></li>
      <li class="<%= 'active' if @controller == 'admin/products'%>"><%= link_to admin_products_path do %><i class='fa fa-link'></i> <span>Produtos</span><% end %></li>
      <li class="<%= 'active' if @controller == 'admin/users'%>"><%= link_to admin_users_path do %><i class='fa fa-link'></i> <span>Usuários</span><% end %></li>
      <%# Preciso ver os admins %>
      <li class="<%= 'active' if @controller == 'admin/employees'%>"><%= link_to  admin_employees_path do %><i class='fa fa-link'></i> <span>Funcionários</span><% end %></li>
    </ul>
  </section>
</aside>
